  <div class="tab" style="display: none;">
    <button class="tablinks" onclick="openTrackingLink('DHL')">Track By DHL</button>
    <button class="tablinks" onclick="openTrackingLink('SCG')">Track By SCG</button>
    <button class="tablinks" onclick="openTrackingLink('Porlor')">Track By Porlor</button>
    <button class="tablinks" onclick="openTrackingLink('Skyfrog')">Track By Skyfrog(BKK)</button>
  </div>

  <script>
    function openTrackingLink(carrier) {
      const trackingLinks = {
        'DHL': 'https://www.dhl.com/global-en/home/tracking.html',
        'SCG': 'https://www.scgjwd.com/tracking',
        'Porlor': 'https://rfe.co.th/tracking',
        'Skyfrog': 'https://track.skyfrog.net'
      };
      
      window.open(trackingLinks[carrier], '_blank');
    }

    // Loading delay script
    setTimeout(function () {
      document.querySelector('.splash-screen').style.display = 'none';
      document.querySelector('.tab').style.display = 'block';
    }, 3000);
  </script>
</body>
